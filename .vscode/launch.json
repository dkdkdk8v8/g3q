    "version": "0.2.0",
    "configurations": [
        {
            "name": "Local: Debug Current File",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}", // 调试当前编辑器打开的那个文件
            "showLog": true,
            "output": "${workspaceFolder}/server/ztest/zbinary",
        },
        {
            "name": "Local: Client",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/server/server/main_client", // 调试整个工作区（入口是 main 包）
            "output": "${workspaceFolder}/server/server/main_client/local_main_client",
            "args": ["--ter"], // 传递给程序的命令行参数
            "env": {
                "test": "test" // 设置临时环境变量
            }
        },
        {
            "name": "Remote: Client Tunnel Debug",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/server/server/main_client", // 调试整个工作区（入口是 main 包）
            "output": "${workspaceFolder}/server/server/main_client/remote_main_client",
            "args": ["--ter"], // 传递给程序的命令行参数
            "env": {
                "test": "test" // 设置临时环境变量
            },
            "preLaunchTask": "SSH_Tunnel_Task",
            "showLog": true
        },
        
    ]
}